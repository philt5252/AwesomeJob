<Window x:Class="LdarDataDisplay.Core.Views.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:regions="http://www.codeplex.com/CompositeWPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Menu Name="mainMenu" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="22">
            <MenuItem Header="Configuration">
                <MenuItem Header="Screen Layout" Command="{Binding ShowScreenLayoutCommand}"></MenuItem>
                <MenuItem Header="Device Details"></MenuItem>
            </MenuItem>
            <MenuItem Header="Full Screen" Click="MenuItem_OnClick"></MenuItem>
        </Menu>
        <ItemsControl regions:RegionManager.RegionName="DeviceRegion"></ItemsControl>

    </Grid>
</Window>
